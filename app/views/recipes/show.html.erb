<p>
  <strong>Title:</strong>
  <%= @recipe.title %>
</p>
 
<p>
  <strong>Author:</strong>
  <%= @recipe.user_id %>
</p> 
 
<p>
  <strong>Text:</strong>
  <%= @recipe.text %>
</p>

<h2>Comments</h2>
<%= render @recipe.comments %>

<% if user_signed_in? %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
  

    <% if  current_user.id == @recipe.user_id  %>
      <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
    <% end %>  
<% end %>

<%= link_to 'Back', recipes_path %>